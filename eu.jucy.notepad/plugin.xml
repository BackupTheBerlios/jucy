<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%editor.name"
            icon="icons/notepad.22.png"
            class="eu.jucy.notepad.editors.Notepad"
            id="eu.jucy.notepad">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.jucy.notepad.editors.OpenNotepad"
            description="%command.description"
            id="eu.jucy.notepad.command1"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=eu.jucy.gui.toolbarsearch">
         <toolbar
               id="eu.jucy.notepad">
            <command
                  commandId="eu.jucy.notepad.command1"
                  icon="icons/notepad.22.png"
                  style="push"
                  tooltip="%command.description">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="menu:view?after=additions">
         <command
               commandId="eu.jucy.notepad.command1"
               icon="icons/notepad.22.png"
               style="push"
               tooltip="%command.description">
            </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="eu.jucy.notepad.command1"
            schemeId="uc.default"
            sequence="M1+N">
      </key>
   </extension>
   <extension
         point="eu.jucy.helpers.splashExtension">
      <splashExtension
            icon="icons/notepad.64.png"
            id="eu.jucy.notepad.splashExtension1">
      </splashExtension>
   </extension>

</plugin>
